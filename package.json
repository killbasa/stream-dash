{
	"name": "stream-dash",
	"version": "0.1.0",
	"author": "killbasa <contact@killbasa.com>",
	"type": "module",
	"private": true,
	"license": "Apache-2.0",
	"scripts": {
		"build": "vite build",
		"dev": "vite dev",
		"preview": "vite preview",
		"sync": "svelte-kit sync",
		"check": "yarn sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"test": "vitest --coverage --run",
		"test:watch": "vitest --watch",
		"prepare": "husky",
		"db:generate": "prisma generate",
		"db:push": "prisma db push",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"docker": "docker build -t killbasa/stream-dash ."
	},
	"dependencies": {
		"@prisma/adapter-pg": "6.14.0",
		"@prisma/client": "6.14.0",
		"better-auth": "^1.3.6",
		"cloudflare": "^4.5.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@killbasa/eslint-config": "^3.1.5",
		"@sveltejs/adapter-node": "^5.3.1",
		"@sveltejs/kit": "^2.31.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.2",
		"@tailwindcss/vite": "^4.1.12",
		"@types/node": "^24.3.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "1.12.5",
		"flowbite-svelte-icons": "^2.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prisma": "^6.14.0",
		"svelte": "^5.38.1",
		"svelte-check": "^4.3.1",
		"tailwindcss": "^4.1.12",
		"tsx": "^4.20.4",
		"typescript": "5.9.2",
		"vite": "7.1.2",
		"vitest": "^3.2.4"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{js,ts,json,html}": [
			"prettier --write --log-level=warn \"**/*.{js,ts,json,html}\""
		]
	},
	"packageManager": "yarn@4.9.2",
	"engines": {
		"node": "24.x"
	},
	"volta": {
		"node": "24.6.0"
	}
}
